{
  "name": "zero-trust-api-gateway",
  "version": "1.0.0",
  "description": "A Zero-Trust-Based Multi-Layered Web Security Platform with Custom API Gateway for Microservices",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "jest --testPathPattern=security",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate:certs": "ts-node scripts/generate-certs.ts",
    "start:services": "docker-compose up -d",
    "stop:services": "docker-compose down",
    "opa:start": "docker run -d -p 8181:8181 --name opa -v $(pwd)/policies:/policies openpolicyagent/opa:latest run --server /policies",
    "migrate": "ts-node scripts/migrate.ts",
    "seed": "ts-node scripts/seed.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm run start"
  },
  "keywords": [
    "zero-trust",
    "api-gateway",
    "security",
    "microservices",
    "graphql",
    "oauth2",
    "jwt",
    "mtls"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/gateway": "^2.7.0",
    "@apollo/server": "^4.10.0",
    "@apollo/subgraph": "^2.7.0",
    "@graphql-tools/schema": "^10.0.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "graphql": "^16.8.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mongoose": "^8.21.0",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "openid-client": "^5.6.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.1.0",
    "speakeasy": "^2.0.0",
    "ua-parser-js": "^1.0.41",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/node-forge": "^1.3.11",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
